{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "properties": {
        "version": {
            "$ref": "#/$defs/version"
        },
        "signature_fields": {
            "type": "array",
            "uniqueItems": true,
            "minItems": 1,
            "items": {
                "$ref": "#/$defs/signature_field"
            }
        }
    },
    "required": [
        "version",
        "signature_fields"
    ],
    "$defs": {
        "version": {
            "type": "string",
            "const": "1.0"
        },
        "signature_field": {
            "type": "object",
            "required": [
                "page",
                "id",
                "x",
                "y",
                "width",
                "height"
            ],
            "properties": {
                "page": {
                    "type": "integer",
                    "minimum": 1
                },
                "id": {
                    "type": "string",
                    "minLength": 1
                },
                "recipient_idx": {
                    "type": "integer",
                    "minimum": 0
                },
                "x": {
                    "type": "number"
                },
                "y": {
                    "type": "number"
                },
                "width": {
                    "type": "number",
                    "minimum": 0
                },
                "height": {
                    "type": "number",
                    "minimum": 0
                },
                "type": {
                    "type": "string",
                    "enum": [
                        "date",
                        "signature"
                    ]
                }
            }
        }
    }
}
